{
  "compilerOptions": {
    "target": "es2017",                          
    "module": "commonjs",                    
    "lib": ["es6"],                     
    "allowJs": true,
    "outDir": "build",                          
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "src/@types"],  
    "types": ["node", "express"]  
    },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "test/**/*"]
}